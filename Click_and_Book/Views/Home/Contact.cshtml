@model Click_and_Book.Email.SendEmailDetails;
@{ ViewData["Title"] = "Contact"; }

<div class="col text-center">
    <h2 class="tm-section-title-contact">Contact Us!</h2>
</div>
<br />
<div class="tm-section tm-section-pad tm-bg-img tm-position-relative" id="tm-section-6">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-5 mt-3 mt-md-0">
        <div class="tm-bg-white tm-p-4">
            <form method="post" asp-controller="Home" asp-action="SendEmail" class="contact-form">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input type="text" asp-for="ReplayToName" class="form-control" placeholder="Name" />
                    <span asp-validation-for="ReplayToName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="email" asp-for="ReplayToEmail" class="form-control" placeholder="Email" />
                    <span asp-validation-for="ReplayToEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="text" asp-for="Subject" class="form-control" placeholder="Subject" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <textarea asp-for="Content" class="form-control" rows="9" placeholder="Message"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary tm-btn-primary">Send Message Now</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



